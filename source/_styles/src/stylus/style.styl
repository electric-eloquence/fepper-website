@import '../../../_scripts/src/variables'

// /////////////////////////////////////////////////////////////////////////////
// The base on which the rest of the styles are built.
// /////////////////////////////////////////////////////////////////////////////
@import '0-base/00-variables'
@import '0-base/01-reset'
@import '0-base/02-helpers'
@import '0-base/03-global'

.branding
  background-color: white
  position: -webkit-sticky
  position: sticky
  top: 0
  width: 100%
  z-index: 2
  &__link-inactive
    bottom: 0
    left: 0
    height: 3.2rem;
    position: absolute
    width: 100%
    @media all and (max-width: $bp-md-max)
      height: 2.4rem;
  .dark &
    background-color: $dark-mode-background
.logo
  display: block
  margin: 0 auto
  overflow: hidden
  position: relative
  width: $logo-width
  height: $logo-height
  @media all and (min-width: $bp-xl-min)
    height: $logo-height-xl
    width: $logo-width-xl
  &__bg
    background: linear-gradient(to right, $green, $green 10%, rgb(200,181,17.5) 32.5%, $yellow 42.5%, $yellow 57.5%, rgb(255,160,17.5) 65%, $red 92.5%, $red)
    position: absolute
    bottom: 0.1rem
    transform: translateX(0%)
    width: $logo-bg-width
    height: calc(100% - 0.2rem)
    @media all and (min-width: $bp-xl-min)
      width: $logo-bg-width-xl
  &__img
    position: relative
    top: 0
    left: 0
    width: $logo-width
    height: $logo-height
    @media all and (min-width: $bp-xl-min)
      width: $logo-width-xl
      height: $logo-height-xl
    &__gradient-cover
      &--top,
      &--bottom
        fill: white
        .dark &
          fill: $dark-mode-background
  // This border hides when the gradient background shows through behind various errant alignments.
  &__border
    border: 0.1rem solid white
    position: absolute
    top: 0
    right: 0
    width: 100%
    height: 100%
    .dark &
      border-color: $dark-mode-background
.button--nav,
.button--scroll
  background-color: transparent
  border: 0
  cursor: pointer
  line-height: 1
  outline: 0
  padding: 0
  svg
    display: block
    fill: #bbb
    width: $button-width
    height: $button-width
    @media all and (max-width: $bp-xs-max)
      width: $button-width-small
      height: $button-width-small
  // No focus border in Linux Firefox.
  &::-moz-focus-inner
    border: 0
  &:active svg
    fill: #999
  @media (hover: hover)
    &:hover svg
      fill: #999
.icon-cog::before
  content: "\e994";
  font-family: icomoon;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
.nav--main,
.nav--docpage
  &__buttons
    display: flex
    padding-bottom: 0
.nav--main
  bottom: 0
  left: -($nav-main-width-shown)
  overflow: hidden
  padding-top: 1rem
  position: fixed
  width: $nav-main-width-full
  z-index: 2
  &.in
    background-color: white
    box-shadow: 0.05rem 0.05rem 1rem rgb(153, 136, 102)
    width: $nav-main-width-shown
    transform: translateX($nav-main-width-shown)
    .dark &
      background-color: $dark-mode-background
  &.shifted
    bottom: $footer-height
    &--more
      bottom: $footer-height-more
  &__slider
    background-color: white
    display: flex
    overflow: hidden
    position: relative
    left: 0
    width: $nav-main-width-shown
    .in &
      width: 2 * $nav-main-width-shown
    .dark &
      background-color: $dark-mode-background
  &__button--left
    margin: 0 5.5rem 0 0
    @media all and (max-width: $bp-xs-max)
      margin-right: 7.5rem
      margin-left: -0.5rem
  &__button--settings
    color: $dark-mode-text
    font-size: 2.5rem
    margin-right: 0.5rem
    @media all and (max-width: $bp-xs-max)
      font-size: 2rem
    .settings-in + .nav--main__buttons &
      color: $green
  &__button--right
    transition: opacity 0.15s ease-in 0.1s
    .in &
      opacity: 0
  &__slider
    &.settings-in
      transform: translateX(-($nav-main-width-shown))
.navlist,
.settings
  width: $nav-main-width-shown
.navlist__item,
.settings__item
  font-weight: 500
  padding-left: 1rem
  padding-right: 1rem
.settings
  &__item
    display: flex
    align-items: center
    justify-content: space-between
  &__dark-mode
    display: flex
    position: relative
    width: 3rem
    height: 1.7rem
    &__input // Hide default HTML checkbox.
      opacity: 0
      width: 0
      height: 0
    &__toggle
      background-color: #bbb
      border-radius: 1.7rem
      cursor: pointer
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      transition: .4s;
      &::before
        background-color: white
        border-radius: 50%
        content: ""
        position: absolute
        bottom: 0.2rem
        left: 0.2rem
        transition: .4s;
        width: 1.3rem
        height: 1.3rem
    &__input // The input state's influence on the toggle.
      &:checked + .settings__dark-mode__toggle
        background-color: $green
      &:focus + .settings__dark-mode__toggle
        box-shadow: 0 0 1px #2196F3
      &:checked + .settings__dark-mode__toggle::before
        transform: translateX(1.3rem)
.button--scroll
  position: fixed
  right: 0
  z-index: 1
  @media all and (max-width: $bp-xs-max)
    right: -0.4rem
  &--down
    bottom: 0
    &.shifted
      bottom: $footer-height
      &--more
        bottom: $footer-height-more
  &--up
    display: none
    top: 0
.bottom
  background-color: white
  position: relative
  .dark &
    background-color: $dark-mode-background
.footer
  background-color: $dark-mode-background
  color: white
  padding: 3rem 1.5rem
  position: relative
  text-align: center
  width: 100%
  z-index: 1
  .dark &
    color: $dark-mode-text
