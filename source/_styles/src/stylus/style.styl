@import '../../../_scripts/src/variables'

// /////////////////////////////////////////////////////////////////////////////
// The base on which the rest of the styles are built.
// /////////////////////////////////////////////////////////////////////////////
@import '0-base/00-variables'
@import '0-base/01-reset'
@import '0-base/02-helpers'
@import '0-base/03-global'

body
  color: $black-less-contrast
  position: relative
p
  margin-bottom: 1.6rem;
.branding
  background: white
  padding: 0 0 $branding-pad
  position: -webkit-sticky
  position: sticky
  top: 0
  width: 100%
  z-index: 1
.logo
  display: block
  margin: 0 auto
  overflow: hidden
  position: relative
  width: $logo-width
  height: $logo-height
  @media all and (max-width: $bp-sm-max)
    height: $logo-height * $bp-sm-ratio
    width: $logo-width * $bp-sm-ratio
  &__bg
    background: linear-gradient(to right, $green, $green 10%, rgb(200,181,17.5) 32.5%, $yellow 42.5%, $yellow 57.5%, rgb(255,160,17.5) 65%, $red 92.5%, $red)
    position: absolute
    bottom: 0.1rem
    transform: translateX(0%)
    width: $logo-bg-width
    height: calc(100% - 0.2rem)
    @media all and (max-width: $bp-sm-max)
      width: $logo-bg-width * $bp-sm-ratio
  &__img
    position: relative
    top: 0
    right: 0.002rem
    @media all and (max-width: $bp-sm-max)
      width: ($logo-width * $bp-sm-ratio) + 0.3rem
      height: ($logo-height * $bp-sm-ratio) + 0.2rem
  // This border hides an errant border when zooming in Firefox.
  &__border
    border: 0.05rem solid white
    position: absolute
    top: 0
    right: 0
    width: 100%
    height: 100%
.button--nav,
.button--scroll
  background-color: transparent
  border: 0
  color: #bbb
  cursor: pointer
  font-size: 5rem
  line-height: 1
  outline: 0
  padding: 0
  @media all and (max-width: $bp-md-max)
    font-size: 4rem
  @media all and (max-width: $bp-xs-max)
    font-size: 3rem
    right: 0.5rem
  // No focus border in Linux Firefox.
  &::-moz-focus-inner
    border: 0
.nav--main
  bottom: 0
  height: 100%
  overflow: hidden
  position: fixed
  &.in
    width: 14rem
  &.out
    width: 4.5rem
    @media all and (max-width: $bp-md-max)
      width: 4rem
    @media all and (max-width: $bp-xs-max)
      width: 3.2rem
  &.slide
    z-index: 2
  &__slider
    bottom: 0
    left: 0
    padding-top: 1rem
    position: absolute
    width: 28rem
    .in &
      background-color: white
    .out &
      transform: translateX(-13rem)
    .slide &
      transition: transform 0.25s
  &__li
    font-weight: 500
    padding-left: 1.4rem
  &__buttons
    padding-bottom: 1.5rem
.button--nav
  display: inline
.button--nav--left
  margin: 0 7rem 0 1.5rem
  transform: rotate(270deg)
  @media all and (max-width: $bp-md-max)
    margin-right: 8rem
  @media all and (max-width: $bp-xs-max)
    margin-right: 9rem
.button--nav--right
  transform: rotate(90deg)
  .in &
    opacity: 0
.button--scroll
  position: fixed
  right: 1.5rem
  z-index: 2
  &--down
    bottom: 1.5rem
    transform: rotate(180deg)
  &--up
    display: none
    top: 1.5rem
  &:active
    color: #999
  @media (hover: hover)
    &:hover
      color: #999
.bottom
  background: white
  padding-top: 'calc(100vh - %s - %s - %s - 15.6rem)' % ($item-last-offset $logo-height $branding-pad)
  position: relative
.footer
  background: black
  color: white
  padding: 3rem 0
  position: relative
  text-align: center
  width: 100%
  z-index: 3
