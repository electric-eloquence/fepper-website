@import '0-base/00-variables'
@import '0-base/01-reset'
@import '0-base/02-helpers'
@import '0-base/03-global'

$video-width-max = 1728px
$video-height = (100vw / 3)
$video-height-max = ($video-width-max / 3)
$logo-width = '%spx' % logo_width    // Need px measurement to work around min font-size zoom-out bug in Webkit.
$logo-height = '%spx' % logo_height // Need px measurement to work around min font-size zoom-out bug in Webkit.
$branding-pad = '%srem' % branding_pad
$item-last-offset = '%srem' % item_last_offset

body
  color: $black-less-contrast
  position: relative
p
  margin-bottom: $space
.body__contain
  overflow: hidden
.video
  position: -webkit-sticky
  position: sticky
  top: 0
  width: 100%
  height: $video-height
  z-index: -1
  &__bg
    background: black
    position: absolute
    top: 0
    left: 0
    width: 50%
    height: $video-height
  &__img
    position: absolute
    &--gen-0
      &--0
        width: 50%
        z-index: 1
      &--1
        height: $video-height
      &--2
        top: 'calc(%s - %svw)' % ($video-height (640 / 192)) // top rule (not bottom) necessary for Safari.
        width: 50%
      &--3
        top: $video-height * (48 / 640)
        width: 30%
      &--4
        top: 'calc(%s - %svw)' % ($video-height (640 / 192))
        width: 50%
      &--5
        right: 0
        width: 50%
    &--gen-1
      &--0
        top: $video-height * (48 / 640)
        width: 30%
      &--1
        top: 'calc(%s - %svw)' % ($video-height (640 / 192))
        width: 50%
      &--2
        right: 0
        width: 50%
      &--3
        top: $video-height * (24 / 640)
        left: 50%
        width: 15%
      &--4
        top: 14.9vw // Need to hard-code value for MS Edge.
        left: 50%
        width: 25%
      &--5
        right: 0
        width: 25%
    &--gen-2
      &--0
        top: $video-height * (24 / 640)
        left: 50%
        width: 15%
      &--1
        top: 14.9vw // Need to hard-code value for MS Edge.
        left: 50%
        width: 25%
      &--2
        right: 0
        width: 25%
      &--3
        top: $video-height * (12 / 640)
        left: 75%
        width: 7.5%
      &--4
        top: 'calc(%s - %svw)' % (($video-height / 4) (160 / 192))
        left: 75%
        width: 12.5%
      &--5
        right: 0
        width: 12.5%
    &--gen-3
      &--0
        top: $video-height * (12 / 640)
        left: 75%
        width: 7.5%
      &--1
        top: 'calc(%s - %svw)' % (($video-height / 4) (160 / 192))
        left: 75%
        width: 12.5%
      &--2
        right: 0
        width: 12.5%
      &--3
        top: $video-height * (6 / 640)
        left: 87.5%
        width: 3.75%
      &--4
        top: 'calc(%s - %svw)' % (($video-height / 8) (80 / 192))
        left: 87.5%
        width: 6.25%
      &--5
        right: 0
        width: 6.25%
    &--gen-4
      &--0
        top: $video-height * (6 / 640)
        left: 87.5%
        width: 3.75%
      &--1
        top: 'calc(%s - %svw)' % (($video-height / 8) (80 / 192))
        left: 87.5%
        width: 6.25%
      &--2
        right: 0
        width: 6.25%
      &--3
        top: $video-height * (3 / 640)
        left: 93.75%
        width: 1.875%
      &--4
        top: 'calc(%s - %svw)' % (($video-height / 16) (40 / 192))
        left: 93.75%
        width: 3.125%
      &--5
        right: 0
        width: 3.125%
    &--gen-5
      &--0
        top: $video-height * (3 / 640)
        left: 93.75%
        width: 1.875%
      &--1
        top: 'calc(%s - %svw)' % (($video-height / 16) (40 / 192))
        left: 93.75%
        width: 3.125%
      &--2
        right: 0
        width: 3.125%
      &--3
        top: $video-height * (1.5 / 640)
        left: 96.875%
        width: 0.9375%
      &--4
        top: 'calc(%s - %svw)' % (($video-height / 32) (20 / 192))
        left: 96.875%
        width: 1.5625%
      &--5
        right: 0
        width: 1.5625%
    &--gen-6
      &--0
        top: $video-height * (1.5 / 640)
        left: 96.875%
        width: 0.9375%
      &--1
        top: 'calc(%s - %svw)' % (($video-height / 32) (20 / 192))
        left: 96.875%
        width: 1.5625%
      &--2
        right: 0
        width: 1.5625%
      &--3
        top: $video-height * (0.75 / 640)
        left: 98.4375%
        width: 0.46875%
      &--4
        top: 'calc(%s - %svw)' % (($video-height / 64) (10 / 192))
        left: 98.4375%
        width: 0.78125%
      &--5
        right: 0
        width: 0.78125%
    &--gen-7
      &--0
        top: $video-height * (0.75 / 640)
        left: 98.4375%
        width: 0.46875%
      &--1
        top: 'calc(%s - %svw)' % (($video-height / 64) (10 / 192))
        left: 98.4375%
        width: 0.78125%
      &--2
        right: 0
        width: 0.78125%
      &--3
        top: $video-height * (0.375 / 640)
        left: 99.21875%
        width: 0.234375%
      &--4
        top: 'calc(%s - %svw)' % (($video-height / 128) (5 / 192))
        left: 99.21875%
        width: 0.390625%
      &--5
        right: 0
        width: 0.390625%
    &--gen-8
      &--0
        top: $video-height * (0.375 / 640)
        left: 99.21875%
        width: 0.234375%
      &--1
        top: 'calc(%s - %svw)' % (($video-height / 128) (5 / 192))
        left: 99.21875%
        width: 0.390625%
      &--2
        right: 0
        width: 0.390625%
      &--3
        top: $video-height * (0.1875 / 640)
        left: 99.609375%
        width: 0.1171875%
      &--4
        top: 'calc(%s - %svw)' % (($video-height / 256) (2.5 / 192))
        left: 99.609375%
        width: 0.1953125%
      &--5
        right: 0
        width: 0.1953125%
@media all and (min-width: $video-width-max)
  .video
    &__bg
      height: $video-height-max
    &__img
      &--gen-0
        &--0,
        &--2
          left: 50%
          transform: translateX(-($video-width-max / 2))
          width: ($video-width-max / 2)
        &--1
          height: $video-height-max
          left: 50%
          transform: translateX(-($video-width-max / 2))
        &--2
          height: ($video-width-max / (2 * 15))
          top: ($video-height-max - ($video-width-max / (2 * 15)))
      &--gen-1
        &--0,
        &--1
          left: 50%
          transform: translateX(-($video-width-max / 2))
        &--0
          top: $video-height-max * (48 / 640)
          width: ($video-width-max * 0.3)
        &--1
          width: ($video-width-max / 2)
          height: ($video-width-max / (2 * 15))
          top: ($video-height-max - ($video-width-max / (2 * 15)))
        &--2
          left: 50%
          width: ($video-width-max / 2)
.branding
  background: white
  padding: 1rem 0
  position: -webkit-sticky
  position: sticky
  top: -0.1rem // To not show 1px of text at top of screen on Chrome.
  width: 100%
  z-index: 1
.logo
  margin: 0 auto
  overflow: hidden
  position: relative
  width: $logo-width
  height: $logo-height
  @media all and (max-width: $bp-sm-max)
    transform: scale(0.75)
  &__bg
    background: linear-gradient(to right, $green, $green 10%, rgb(200,181,17.5) 32.5%, $yellow 42.5%, $yellow 57.5%, rgb(255,160,17.5) 65%, $red 90%, $red);
    position: absolute
    top: 0
    right: -900%
    width: 300rem
    height: 100%
  &__img
    position: relative
    top: 0
    left: 0
  &__border
    border: 0.05rem solid white
    position: absolute
    top: 0
    right: 0
    width: 100%
    height: 100%
.main
  background: white
  position: relative
  text-align: center
.content
  &__center
    margin: 0 auto
    max-width: $content-width-max
  &__fixed
    padding-top: 1rem
  &__slider
    padding: '%srem 0' % main_content_translate_y
    @media all and (max-width: $bp-md-max)
      margin: 0 ($space-quarter * 3)
  &__fixed + .content__slider
    padding: '0 0 %srem' % (main_content_translate_y - 1)
.link-github
  display: flex
  justify-content: center
  line-height: 2.8rem
  &__anchor
    display: block
    &:hover + .link-github__anchor--arrow,
    &--arrow:hover
      font-size: 2.2rem
    &--arrow
      font-size: 2rem
      padding-left: 1rem
      width: 3.2rem
.hider
  background: white
  position: fixed
  top: 'calc(%s + %s + (2 * %s))' % ($video-height $logo-height $branding-pad)
  width: 100%
  height: 100vh
.bottom
  background: white
  padding-top: 'calc(100vh - %s - %s - (2 * %s) - 15.6rem)' % ($item-last-offset $logo-height $branding-pad)
  position: relative
.footer
  background: black
  color: white
  padding: 3rem 0
  text-align: center
  width: 100%
html.es6-modules-enabled
  .browser-advice
    display: none
  .content
    display: flex
    align-items: center
    flex-direction: column
    position: absolute
    top: 0
    left: 0
    width: 100%
    &__slider
      opacity: 0;
      transform: 'translateY(%srem)' % main_content_translate_y
      transition: opacity 0.5s, transform 0.5s
    &__slid
      opacity: 1
      transform: translateY(0)
// Remove this if position: sticky ever renders well on MS Edge.
html.ms-edge
  .video,
  .branding
    position: static
