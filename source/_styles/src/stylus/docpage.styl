@import 'style'

$fade-height = 6rem
$fade-height-small = $fade-height * $bp-sm-ratio
$fade-offset = 5rem
$fade-offset-small = $fade-offset * $bp-sm-ratio
$nav-docpage-width-small = 32rem
$nav-docpage-height = 106rem

h4
  margin: 1.6rem 0 0
.fade
  transition: opacity 1s
.octicon
  display: none
.foundation
  display: flex
  padding-top: $fade-offset
  position: relative
  margin: 0 auto
  max-width: $max-width
  @media all and (max-width: $bp-sm-max)
    display: block
  .webkit &
    color: #f00
    a
      color: #f00
.content
  padding-left: 5rem
  width: calc(100vw - 30rem)
  @media all and (max-width: $bp-md-max)
    padding-left: 4.5rem
  @media all and (max-width: $bp-sm-max)
    min-height: $nav-docpage-height
    padding-right: 4.5rem
    width: 100%
  @media all and (max-width: $bp-xs-max)
    padding: 0 3rem
  .docpage--index &
    width: 100%
.nav--docpage
  width: 30rem
  .docpage--index &
    padding-right: 1.6rem
    width: 100%
    @media all and (max-width: $bp-md-max)
      right: -($nav-docpage-width-small)
  &.in
    .nav--docpage__slider
      @media all and (max-width: $bp-sm-max)
        transform: translateX(-($nav-docpage-width-small))
  &__slider
    @media all and (max-width: $bp-sm-max)
      background-color: white
  &__sections
    @media all and (max-width: $bp-sm-max)
      padding: 0 0.8rem 0 4.5rem
    .docpage--index &
      display: grid
      grid-template-columns: 50% 50%
      grid-template-rows: auto
      @media all and (max-width: $bp-xs-max)
        display: block
      .nav--docpage__section
        padding: 0 0 2.4rem 33%
        @media all and (max-width: $bp-md-max)
          padding-left: 20%
        @media all and (max-width: $bp-sm-max)
          padding-left: 5rem
        @media all and (max-width: $bp-xs-max)
          padding-left: 3rem
  &__buttons
    @media all and (max-width: $bp-sm-max)
      @extend .slide .slider
      position: fixed
      bottom: 0
      right: -($nav-docpage-width-small - 5rem)
      width: $nav-docpage-width-small
      .in &
        transform: translateX(-($nav-docpage-width-small - 5rem))
  &__button-left
    @media all and (max-width: $bp-sm-max)
      margin-right: $nav-docpage-width-small - 10rem
:not(.docpage--index) > .foundation > .nav--docpage
  @media all and (max-width: $bp-sm-max)
    height: $nav-docpage-height
    position: absolute
    top: $fade-offset
    right: -($nav-docpage-width-small)
    width: $nav-docpage-width-small
.nav--docpage__section:first-child .nav--docpage__heading
  margin-top: 0
.overlay
  pointer-events: none
  position: fixed
  width: 100%
  z-index: 3
.overlay--top,
.overlay--bottom
  height: $fade-height
.overlay--top
  top: $logo-height
  @media all and (max-width: $bp-sm-max)
    top: $logo-height-small
.overlay--middle
  backdrop-filter: contrast(1.5) saturate(0)
  -webkit-backdrop-filter: contrast(1.5) saturate(0)
  height: 'calc(100vh - %s - %s)' % ($logo-height ($fade-height * 2))
  top: unit($logo-height / 10, 'rem') + $fade-height
  @media all and (max-width: $bp-sm-max)
    height: 'calc(100vh - %s - %s)' % ($logo-height-small ($fade-height * 2))
    top: unit($logo-height-small / 10, 'rem') + $fade-height
.overlay--bottom
  bottom: 0
.ol
  font-size: 0.1rem
  line-height: 1
.olo
  background-color: white
.hider
  bottom: 0
  height: $fade-offset
.bottom
  margin-top: 2.4rem
