@import 'style'

$fade-height = 6rem
$fade-offset = 5rem

.fade
  transition: opacity 1s
.foundation
  display: flex
  padding-top: $fade-offset
  margin: 0 auto
  max-width: $max-width
  .webkit &
    color: #f00
    a
      color: #f00
.content
  width: calc(100vw - 30rem)
  .docpage--index &
    width: 100%
.nav--docpage
  width: 30rem
  .docpage--index &
    width: 100%
  &__sections
    .docpage--index &
      display: grid
      grid-template-columns: 50% 50%
      grid-template-rows: auto
      .nav--docpage__section
        padding: 0 0 2.4rem 33%
.overlay
  pointer-events: none
  position: fixed
  width: 100%
.overlay--top,
.overlay--bottom
  height: $fade-height
.overlay--top
  top: $branding-height
.overlay--middle
  backdrop-filter: contrast(1.5) saturate(0)
  -webkit-backdrop-filter: contrast(1.5) saturate(0)
  height: 'calc(100vh - %s - 12rem)' % $branding-height
  top: $branding-height + $fade-height
.overlay--bottom
  bottom: 0
.ol
  font-size: 0.1rem
  line-height: 1
.olo
  background-color: white
.hider
  bottom: 0
  height: $fade-offset
.bottom
  padding-top: 2.4rem
