/* html and body */
html
  font-size: (100 / 1.6)%
body
  background: $white
  font: 1.6em/1.5 $font
  -webkit-text-size-adjust: 100%
  color: $gray-dark
  min-width: $bp-xx-max
  min-height: 100vh
  padding-bottom: $footer-height
  position: relative
  @media all and (max-width: $bp-sm-max)
    font-size: 1.4em
/* Override user-agent heading defaults */
article, aside, nav, section
  h1
    font-size: 2em
h1, h2
  line-height: 1.2
h4
  font-size: 1.1em
h5
  font-size: 1.0625em
h6
  font-size: 1em
p
  margin-bottom: $space
a
  color: $gray-dark
  text-decoration: none
  outline: 0
  &:hover, &:focus
    color: $gray
/* Completely remove from the flow and screen readers. */
.hidden
  display: none !important
  visibility: hidden !important
/* Completely remove from the flow but leave available to screen readers. */
.visually-hidden
  position: absolute !important
  overflow: hidden
  width: 1px
  height: 1px
  padding: 0
  border: 0
  clip: rect(1px, 1px, 1px, 1px)
/* Hide elements in print view */
@media print
  header.header,
  form,
  footer.footer
    display: none
