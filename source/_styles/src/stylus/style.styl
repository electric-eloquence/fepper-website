body
  height: 200vh
.logo
  margin: 1rem
  width: 30rem
  height: 10rem
  overflow: hidden
  position: fixed
  &__background
    background: linear-gradient(to left, $green-fepper, $green-fepper 20%, #f0c000 40%, #f0c000 60%, $red-fepper 80%, $red-fepper);
    position: absolute
    top: 0
    right: 0
    width: 150rem
    height: 100%
  &__image
    position: relative
    top: 0
    left: 0
