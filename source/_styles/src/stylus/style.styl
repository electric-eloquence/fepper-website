@import '../../../_scripts/src/variables'

// /////////////////////////////////////////////////////////////////////////////
// The base on which the rest of the styles are built.
// /////////////////////////////////////////////////////////////////////////////
@import '0-base/00-variables'
@import '0-base/01-reset'
@import '0-base/02-helpers'
@import '0-base/03-global'

body
  color: $black-less-contrast
  position: relative
p
  margin-bottom: 1.6rem;
.branding
  background-color: white
  padding: 0 0 $branding-pad
  position: -webkit-sticky
  position: sticky
  top: 0
  width: 100%
  z-index: 1
.logo
  display: block
  margin: 0 auto
  overflow: hidden
  position: relative
  width: $logo-width
  height: $logo-height
  @media all and (max-width: $bp-sm-max)
    height: $logo-height * $bp-sm-ratio
    width: $logo-width * $bp-sm-ratio
  &__bg
    background: linear-gradient(to right, $green, $green 10%, rgb(200,181,17.5) 32.5%, $yellow 42.5%, $yellow 57.5%, rgb(255,160,17.5) 65%, $red 92.5%, $red)
    position: absolute
    bottom: 0.1rem
    transform: translateX(0%)
    width: $logo-bg-width
    height: calc(100% - 0.2rem)
    @media all and (max-width: $bp-sm-max)
      width: $logo-bg-width * $bp-sm-ratio
  &__img
    position: relative
    top: 0
    right: 0.002rem
    @media all and (max-width: $bp-sm-max)
      width: ($logo-width * $bp-sm-ratio) + 0.3rem
      height: ($logo-height * $bp-sm-ratio) + 0.2rem
  // This border hides an errant border when zooming in Firefox.
  &__border
    border: 0.05rem solid white
    position: absolute
    top: 0
    right: 0
    width: 100%
    height: 100%
.button--nav,
.button--scroll
  background-color: transparent
  border: 0
  cursor: pointer
  line-height: 1
  outline: 0
  padding: 0
  svg
    display: block
    fill: #bbb
    width: 6rem
    height: 6rem
    @media all and (max-width: $bp-md-max)
      width: 5rem
      height: 5rem
    @media all and (max-width: $bp-xs-max)
      width: 4rem
      height: 4rem
  &:active svg
    fill: #999
  @media (hover: hover)
    &:hover svg
      fill: #999
  // No focus border in Linux Firefox.
  &::-moz-focus-inner
    border: 0
.nav--main
  bottom: 0
  height: 100%
  overflow: hidden
  position: fixed
  &.in
    width: 14rem
  &.out
    width: 5rem
    @media all and (max-width: $bp-md-max)
      width: 4.5rem
    @media all and (max-width: $bp-xs-max)
      width: 3.7rem
  &.slide
    z-index: 2
  &__slider
    bottom: 0
    left: 0
    padding-top: 1rem
    position: absolute
    width: 28rem
    .in &
      background-color: white
    .out &
      transform: translateX(-13rem)
    .slide &
      transition: transform 0.25s
  &__li
    font-weight: 500
    padding-left: 1.8rem
    @media all and (max-width: $bp-md-max)
      padding-left: 1.4rem
    @media all and (max-width: $bp-xs-max)
      padding-left: 1rem
  &__buttons
    padding-bottom: 0
.button--nav
  display: inline
.button--nav--left
  margin: 0 6.5rem 0 0
  @media all and (max-width: $bp-md-max)
    margin-right: 7.5rem
  @media all and (max-width: $bp-xs-max)
    margin-right: 8.5rem
    margin-left: -0.4rem
.button--nav--right
  .in &
    opacity: 0
.button--scroll
  position: fixed
  right: 0
  z-index: 2
  &--down
    bottom: 0
  &--up
    display: none
    top: 0
  @media all and (max-width: $bp-xs-max)
    right: -0.4rem
.hider
  background-color: white
  opacity: 1
  position: fixed
  width: 100%
  z-index: 1
.bottom
  background-color: white
  position: relative
.footer
  background-color: black
  color: white
  padding: 3rem 0
  position: relative
  text-align: center
  width: 100%
  z-index: 3
