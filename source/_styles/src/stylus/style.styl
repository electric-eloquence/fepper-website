@import '../../../_scripts/src/variables'

// /////////////////////////////////////////////////////////////////////////////
// The base on which the rest of the styles are built.
// /////////////////////////////////////////////////////////////////////////////
@import '0-base/00-variables'
@import '0-base/01-reset'
@import '0-base/02-fonts'
@import '0-base/03-helpers'
@import '0-base/04-global'

$video-head-height = 33.334vw
$logo-height = 20rem
$logo-margin = 1rem

body
  height: 200vh
  position: relative
.video-head
  width: 100%
  height: $video-head-height
.branding
  background: white
  width: 100%
.logo
  margin $logo-margin auto
  overflow: hidden
  position: relative
  width: 30rem
  height: $logo-height
  &__bg
    background: linear-gradient(to left, $green-fepper, $green-fepper 20%, $yellow-fepper 40%, $yellow-fepper 60%, $red-fepper 80%, $red-fepper);
    position: absolute
    top: 0
    right: 0
    width: 150rem
    height: 100%
  &__img
    position: relative
    top: 0
    left: 0
.browser-advice
  margin-top: 'calc(100vh - %s - %s - %s - %s)' % ($video-head-height $logo-height $logo-margin $logo-margin)
.main
  max-width: $content-width-max
  margin: 0 auto
  text-align: center
  @media all and (max-width: $bp-md-max)
    margin: 0 ($space-quarter * 3)
.main__content__item
  transition: margin-top 1s
.main__content__slid
  display: block
  margin-top: 0
.main__content__slid + .main__content__slider
  display: block
  margin-top: 'calc(100vh - 17vw - %s - %s - %s)' % ($logo-height $logo-margin $logo-margin)
  visibility: hidden
