/* html and body */
html
  font-size: 10px
body
  color: $black-less-contrast
  font: 1.6em/1.5 $font
  min-width: $bp-xx-max
  min-height: 100vh
  position: relative
  &.dark
    background-color: $dark-mode-background
    color: $dark-mode-text
/* Override user-agent heading defaults */
h1
  font-size: 0.75em
  line-height: 1
  @media all and (min-width: $bp-xl-min)
    font-size: 1em
h3
  font-size: 1.5em
h4
  font-size: 1.17em
h5
  font-size: 1.0625em
h6
  font-size: 1em
a
  color: $black-less-contrast
  text-decoration: none
  .dark &
    color: $dark-mode-text
blockquote
  border-left-width: 1px
  border-left-style: solid
  font-style: italic
  padding-left: 1.6rem
code
  background-color: #c4c4c4
  font-family: Menlo, "Lucida Console", "DejaVu Sans Mono", "Liberation Mono", "Roboto Mono", monospace
  font-size: 0.875em
ol, ul
  list-style-type: none
ol, p
  margin-bottom: 1.6rem;
pre
  background-color: $black-less-contrast
  color: white
  font-size: 0.875em
  margin-top: 0
  padding: 0.8rem 1.6rem
  > code
    background-color: transparent
    display: block
    font-size: 1em
  .dark &
    color: $dark-mode-text
strong
  font-weight: 500
.bg
  &--black-less-contrast
    background-color: $black-less-contrast
    color: white
    .dark &
      color: $dark-mode-text
  &--green-fepper
    background-color: $green
  &--red-fepper
    background-color: $red
  &--yellow-fepper
    background-color: $yellow
.fade
  transition: opacity 1s
  &--quick
    transition: opacity 0.2s
    &--in
      opacity: 1
    &--out
      opacity: 0
/* Completely remove from the flow and screen readers. */
.hidden
  display: none !important
  visibility: hidden !important
.slider
  transition: transform 0.25s
/* Completely remove from the flow but leave available to screen readers. */
.visually-hidden
  position: absolute !important
  overflow: hidden
  width: 1px
  height: 1px
  padding: 0
  border: 0
  clip: rect(1px, 1px, 1px, 1px)
/* Hide elements in print view */
@media print
  header.header,
  form,
  footer.footer
    display: none
