@import 'style'

$fade-height = 6rem
$fade-height-small = $fade-height * $bp-sm-ratio
$fade-offset = 5rem
$fade-offset-small = $fade-offset * $bp-sm-ratio
$nav-docpage-width = 32rem
$nav-docpage-height = 106rem

h4
  margin: 1.6rem 0 0
.fade
  transition: opacity 1s
.octicon
  display: none
.foundation
  display: flex
  padding-top: 3rem
  position: relative
  margin: 0 auto
  max-width: $max-width
  @media all and (max-width: $bp-sm-max)
    display: block
.content
  padding: 2rem 1.5rem 2.5rem 4.5rem
  width: 'calc(100vw - %s)' % $nav-docpage-width
  .webkit &
    color: #f00
    a
      color: #f00
  @media all and (max-width: $bp-sm-max)
    min-height: $nav-docpage-height
    width: 100%
  @media all and (max-width: $bp-xs-max)
    padding: 2rem 3rem 0
  @media all and (min-width: $max-width)
    width: 'calc(%s - %s)' % ($max-width $nav-docpage-width)
  a
    text-decoration: underline
  .docpage--index &
    width: 100%
.nav--docpage
  .docpage--index &
    padding-right: 1.6rem
    width: 100%
  &.in
    .nav--docpage__slider.nav--docpage__slider.nav--docpage__slider
      @media all and (max-width: $bp-sm-max)
        transform: translateX(0)
    .button--nav--left
      opacity: 0
      pointer-events: none
  &__slider
    z-index: 5
  &__sections
    padding: 2rem 0.8rem 2.5rem 3rem
    .docpage--index &
      display: grid
      grid-template-columns: 50% 50%
      grid-template-rows: auto
      @media all and (max-width: $bp-xs-max)
        display: block
      .nav--docpage__section
        padding: 0 0 2.4rem 33%
        @media all and (max-width: $bp-md-max)
          padding-left: 20%
        @media all and (max-width: $bp-sm-max)
          padding-left: 5rem
        @media all and (max-width: $bp-xs-max)
          padding-left: 3rem
  &__buttons
    display: none
    z-index: 6
    &.shifted
      bottom: $bottom-height 
    @media all and (max-width: $bp-sm-max)
      @extend .slide .slider
      display: flex
      bottom: 0
      position: fixed
      width: 10rem
      right: -5rem
      .in &
        transform: translateX(-5rem)
    @media all and (max-width: $bp-xs-max)
      width: 8rem
      right: -4rem
      .in &
        transform: translateX(-4rem)
:not(.docpage--index) > .foundation > .nav--docpage > .nav--docpage__slider
  min-height: 100%
  position: relative
  @media all and (max-width: $bp-sm-max)
    position: absolute
    top: 3rem
    right: 0
    transform: translateX($nav-docpage-width)
    width: $nav-docpage-width
.nav--docpage__section:first-child .nav--docpage__heading
  margin-top: 0
.overlay
  pointer-events: none
  position: fixed
  width: 100%
  z-index: 4
  .nav--docpage &
    z-index: 5
.overlay--top,
.overlay--bottom
  height: $fade-height
.overlay--top
  top: $logo-height
  @media all and (max-width: $bp-sm-max)
    top: $logo-height-small
.overlay--middle
  backdrop-filter: contrast(1.5) saturate(0)
  -webkit-backdrop-filter: contrast(1.5) saturate(0)
  height: 'calc(100vh - %s - %s)' % ($logo-height ($fade-height * 2))
  top: unit($logo-height / 10, 'rem') + $fade-height
  @media all and (max-width: $bp-sm-max)
    height: 'calc(100vh - %s - %s)' % ($logo-height-small ($fade-height * 2))
    top: unit($logo-height-small / 10, 'rem') + $fade-height
.overlay--bottom
  bottom: 0
body > .overlay--opacity.overlay--top,
body > .overlay--opacity.overlay--bottom
  @media all and (max-width: $bp-sm-max)
    display: none
.overlay__line
  font-size: 0.1rem
  line-height: 1
.overlay__line--opacity
  background-color: white
