$video-head-height = (100vw / 3)
$logo-width = '%spx' % logo_width    // Need px measurement to work around min font-size zoom-out bug in Webkit.
$logo-height = '%spx' % logo_height // Need px measurement to work around min font-size zoom-out bug in Webkit.
$branding-pad = '%srem' % branding_pad
$item-last-offset = '%srem' % item_last_offset

body
  color: $black-less-contrast
  position: relative
p
  margin-bottom: $space
.body__contain
  overflow: hidden
.video-head
  position: sticky
  top: 0
  width: 100%
  height: $video-head-height
  &__bg
    background: black
    position: absolute
    top: 0
    left: 0
    width: 50%
    height: $video-head-height
  &__img
    position: absolute
    &--gen-0
      &--0
        width: 50%
        z-index: 1
      &--1
        height: $video-head-height
      &--2
        top: 'calc(%s - %svw)' % ($video-head-height (640 / 192)) // top rule (not bottom) necessary for Safari.
        width: 50%
      &--3
        top: $video-head-height * (48 / 640)
        width: 30%
      &--4
        top: 'calc(%s - %svw)' % ($video-head-height (640 / 192))
        width: 50%
      &--5
        right: 0
        width: 50%
    &--gen-1
      &--0
        top: $video-head-height * (48 / 640)
        width: 30%
      &--1
        top: 'calc(%s - %svw)' % ($video-head-height (640 / 192))
        width: 50%
      &--2
        right: 0
        width: 50%
      &--3
        top: $video-head-height * (24 / 640)
        left: 50%
        width: 15%
      &--4
